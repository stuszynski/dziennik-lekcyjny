<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= content_for?(:title) ? yield(:title) : "Lista S, lato 11/12" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= render :partial => 'common/menu' %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="content">
      <div class="row">
        <div class="span16">
          <%= render :partial => 'common/flashes' %>
          <%= yield %>
        </div>
      </div>
      <footer>
        <%= render :partial => 'common/footer' %>
      </footer>
    </div>
  </div>

</body>
</html>
